{% trans_default_domain 'FOSUserBundle' %}

<div class="login">
    <h1>Login:</h1>
    <hr>

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="row">
            <div class="col-md-4">
                <label for="username">Username:</label>
            </div>
            <div class="col-md-4">
                <input type="text" placeholder="Username" id="username" name="_username" required="required" autocomplete="username" />
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-4">
                <label for="password">Password:</label>
            </div>
            <div class="col-md-4">
                <input type="password" placeholder="Password" id="password" name="_password" required="required" autocomplete="current-password" />
            </div>
        </div>
        {% if error %}
            <div style="color:red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <br><br><br>
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-block btn-large">Log in</button>
            </div>
        </div>
    </form>
</div>
